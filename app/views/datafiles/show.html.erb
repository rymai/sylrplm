<h1><%= t(:datafile_show) %></h1>
<p>
	<b><%= t("label_ident") %></b>
	<%= h @datafile.ident %>
</p>
<p>
	<b><%= t("label_typesobject") %></b>
	<%= h @datafile.typesobject.name unless @datafile.typesobject.nil? %>
</p>
<p>
	<b><%= t("label_revision") %></b>
	<%= h @datafile.revision %>
</p>
<p>
	<b><%= t("label_volume") %></b>
	<%= link_to "#{@datafile.volume.name}.#{@datafile.volume.protocol}", volume_path(@datafile.volume) %>
</p>
<p>
	<b><%= t("label_filename") %></b>
	<%= h @datafile.filename %>
</p>
<p>
	<b><%= t("label_repository") %></b>
	<%= h @datafile.repository %>
</p>
<p>
	<b><%= t("label_content_type") %></b>
	<%= h @datafile.content_type %>
</p>
<p>
	<b><%= t("label_responsible") %></b>
	<%= h @datafile.owner.login %>
</p>
<p>
	<b><%= t("label_date") %></b>
	<%= l @datafile.updated_at %>
</p>
<table class='menu_bas'>
	<tr>
		<td> <%= link_to t("edit"), edit_datafile_path(@datafile) %> </td>
		<td> <%= link_to t("list"), datafiles_path %> </td>
		<%if @document!=nil%> <td> <%= link_to t("document_show"), document_path(@document) %> </td>
		<%end%>
	</tr>
</table>
